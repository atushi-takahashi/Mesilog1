<div class="conteiner">
  <p><%= notice %></p>
  <p><%= alert %></p>
  <h1>新規投稿</h1>
  <div>
    <%= form_with model:@post, locsl: true do |f| %>
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title %><br>
      <%= f.label :content, "本文" %><br>
      <%= f.text_area :content %><br>
      <%= f.label :content_image, "画像" %><br>
      <%= f.attachment_field :content_image %><br>
      <%= f.submit "投稿する" %>
    <% end %>
  </div>
</div>