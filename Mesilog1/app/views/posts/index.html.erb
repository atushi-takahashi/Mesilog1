<div class="conteiner">
  <h1 class="text-center">投稿一覧</h1>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-lg-3 content">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :content_image, :fill, 455, 405, fallback: "noimage-content.png", class:"img-responsive" %>
        <% end %>
        <%= post.title %><br>
        <p class="time"><%= post.created_at.to_s(:datetime_jp) %></p>
    </div>
    <% end %>
  </div>
</div>